#include "libft.h"
#include "shellpticflesh.h"

void free_env(t_env *env)
{
	t_env *next;

	next = env->next;
    while (env != NULL)
    {
        free(env->key);
        if (env->value != NULL)
			free_char_etoile_etoile(env->value);
        free(env);
        env = next;
    }
}

void	free_command(t_command *l)
{
	t_command	*next;

	while (l && l->next)
	{
		next = l->next;
		free(l->content);
		free(l);
		l = l->next;
	}
	if (l && l->content)
		free(l->content);
	if (l)
		free(l);
}
